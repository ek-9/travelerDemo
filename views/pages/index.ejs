        /*}*/
        .img_logo_header {
            width : 300px;
            height : 100px;
        }

        .img_main_title1 {
            display: block;
            margin-left: auto;
            margin-right: auto;
            /*margin-top: 200px;*/
            height: 100px;
            width: 300px;
        }
        .img_main_title2 {
            display: block;
            margin-left: auto;
            margin-right: auto;
            height: 200px;
            width: 400px;
        }

        /* .menu_line {
            text-align: right;
        } */

        .make_center {
            text-align : center;
        }

        .menu_button {
            height: 30px;
            width: 70px;
            float : right;
            background-color: aquamarine;
        }

        #space {
            width :100%;
            height :200px;
        }

        .space1 {
            width:100%;
            height : 150px;
        }

        .space3 {
            width : 100%;
            height : 170px;
        }

        .section2_content {
            text-align : center;
            font-size : 20px;
        }
    </style>
    <script>
        window.addEventListener("wheel", function(e){
            e.preventDefault();
        },{passive : false});

        var $html = $("html");
        var page = 1;
        var lastPage = $(".section").length;
        $html.animate({scrollTop:0},10);

        $(window).on("wheel", function(e){

	        if($html.is(":animated")) return;

	        if(e.originalEvent.deltaY > 0){
                if(page== lastPage) return;
		        page++;
	        }else if(e.originalEvent.deltaY < 0){
		        if(page == 1) return;
		        page--;
	        }
	        var posTop = (page-1) * $(window).height();
	        $html.animate({scrollTop : posTop});
        });
    </script>
</head>

<body>

<div class="section" id="section1">
